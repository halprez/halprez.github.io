  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "html-validate": "^8.7.4",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "engines": {
    "node": ">=18"
  }
